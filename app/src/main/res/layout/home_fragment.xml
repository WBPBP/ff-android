<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="vm"
            type="org.wbpbp.preshoes.feature.home.HomeViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Content -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- When device is available -->
            <LinearLayout
                android:paddingBottom="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="@{vm.isDeviceAvailable ? View.VISIBLE : View.GONE}"
                tools:visibility="visible"
                android:clipToPadding="false"
                android:clipChildren="false">

                <!-- Foot view section -->
                <androidx.cardview.widget.CardView
                    style="@style/SectionCard"
                    android:id="@+id/foot_section">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Title -->
                        <TextView
                            style="@style/SectionHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_realtime" />

                        <!-- Pressure view -->
                        <LinearLayout
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Left foot -->
                            <org.wbpbp.preshoes.common.widget.FootPressureView
                                android:id="@+id/pressure_view_left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:footTint="@color/colorPrimary"
                                app:sensorTint="@color/colorPrimaryDark"
                                app:side="left" />

                            <!-- Right foot -->
                            <org.wbpbp.preshoes.common.widget.FootPressureView
                                android:id="@+id/pressure_view_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:footTint="@color/colorPrimary"
                                app:sensorTint="@color/colorPrimaryDark"
                                app:side="right" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Battery section -->
                <androidx.cardview.widget.CardView
                    style="@style/SectionCard"
                    android:id="@+id/battery_section">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Section name -->
                        <TextView
                            style="@style/SectionHeader"
                            android:text="@string/text_battery" />

                        <!-- Battery view -->
                        <include
                            layout="@layout/battery_view"
                            app:vm="@{vm}"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- When device is not available -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{vm.isDeviceAvailable ? View.GONE : View.VISIBLE}"
                tools:visibility="gone">

                <TextView
                    android:id="@+id/no_device_text"
                    style="@style/TextBig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@string/text_no_device_connected"/>

                <Button
                    android:id="@+id/connect_device_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/no_device_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/button_connect_device"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>