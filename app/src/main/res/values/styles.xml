<resources>

    <style name="BigButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">18sp</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- Text -->
    <style name="TextBig">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/textBig</item>
        <item name="android:textColorLink">?android:attr/textColorPrimary</item>
    </style>
    <style name="TextPrimary">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/textPrimary</item>
        <item name="android:textColorLink">?android:attr/textColorPrimary</item>
    </style>
    <style name="TextSecondary">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">@dimen/textSecondary</item>
    </style>
    <style name="TextTertiary">
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="android:textSize">@dimen/textTertiary</item>
    </style>

    <!-- Section -->
    <style name="SectionDividerTop">
        <item name="android:background">@color/dividerGrayForLightTheme</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.75dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:layout_marginStart">14dp</item>
    </style>
    <style name="SectionDividerBottom">
        <item name="android:background">@color/dividerGrayForLightTheme</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.75dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_marginStart">14dp</item>
    </style>
    <style name="SectionHeader" parent="TextSecondary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">14dp</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="titleTextAppearance">@style/ToolbarText</item>
    </style>
    <style name="ToolbarText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/textToolbar</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Drawer -->
    <style name="DrawerRow">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
    <style name="DrawerText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:lines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/textSecondary</item>
    </style>
    <style name="DrawerIcon">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

</resources>
