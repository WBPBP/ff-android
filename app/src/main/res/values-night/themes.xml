<resources>

    <style name="AppTheme" parent="AppBaseThemeDark" />

    <!-- Light theme -->
    <style name="AppBaseThemeDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/backgroundLittleDark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarColor">@color/backgroundLittleDark</item>

        <item name="android:textColorPrimary">@color/textPrimaryInverse</item>
        <item name="android:textColorSecondary">@color/textSecondaryInverse</item>
        <item name="android:textColorTertiary">@color/textTertiaryInverse</item>

        <item name="android:windowBackground">@color/backgroundDark</item>
        <item name="barBackground">@color/backgroundLittleDark</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Splash theme. -->
    <style name="SplashTheme" parent="AppBaseThemeDark">
        <item name="android:windowBackground">@drawable/splash_background_dark</item>
    </style>

</resources>